.content {
  width: 100%;
  height: 50%;
}

.ahead_img {
  width: 50rpx;
  height: 50rpx;
  position: absolute; /* 要约束所在位置的子元素的位置要设置成绝对 */
  right: 0; /* 靠右调节 */

}
.avatar_img{
  width: 60rpx;
  height: 60rpx;
  position: absolute; /* 要约束所在位置的子元素的位置要设置成绝对 */
  right: 7%; /* 靠右调节 */
}

.input{
  position: absolute; /* 要约束所在位置的子元素的位置要设置成绝对 */
  left: 65%; /* 靠右调节 */
}

.label {
  color: rgb(8, 8, 8);
  font-size: 35rpx;
  margin-left: 25rpx;
}

.list-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 75rpx;
  margin-top: 20rpx;
  position: relative;
  background: white;
}

.line {
  width: 100%;
  height: 0.5rpx;
  background: lightgray;
  /* margin-left: 100rpx; */
