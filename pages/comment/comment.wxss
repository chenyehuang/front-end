


.goods-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.goods-item {
  width: 100%;
  margin-bottom: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 0 0 6rpx #d9d9d9;
}

.goods-image {
  width: 35%;
  height: 200rpx;
  object-fit: cover;
}

.goods-info {
  padding: 20rpx;
}

.goods-name {
  font-size: 35rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.goods-price {
  font-size: 26rpx;
  font-weight: bold;
  color: #ff6600;
  margin-bottom: 10rpx;
}

.goods-likes {
  font-size: 24rpx;
  color: #999999;
}

.load-more {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  background-color: #f5f5f5;
  margin-top: 20rpx;
  border-radius: 8rpx;
  box-shadow: 0 0 6rpx #d9d9d9;
}